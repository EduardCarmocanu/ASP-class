@using UclLib.Data
@using UclLib.Objects
@{
	Layout = "~/MasterLayout.cshtml";
	List<Teacher> teachers = GetData.GetTeachers();
}
<div>
	<ul class="list-group">
		@foreach (var teacher in teachers.Select((Value, index) => new { Value, index }))
		{
			<div class="modal fade" id="@("exampleModal" + teacher.index.ToString())" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<div class="student-information">
								<h1>@teacher.Value.Name</h1>
								<p>@teacher.Value.Email</p>
								<p>@teacher.Value.CPR</p>
								<p>@teacher.Value.Address.Street</p>
								<p>@teacher.Value.Phone</p>
							</div>
							<hr />
							<div class="contact-student">
								<form>
									<div class="form-group">
										<label for="exampleFormControlTextarea1">Send message to student</label>
										<textarea class="form-control"
												  id="exampleFormControlTextarea1"
												  rows="3"
												  placeholder="Enter your message here"></textarea>
									</div>
									<button type="submit" class="btn btn-primary">Send message</button>
								</form>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary">Save changes</button>
						</div>
					</div>
				</div>
			</div>
			<li class="list-group-item">
				<button type="button" class="btn btn-primary" data-toggle="modal" data-target="@("#exampleModal" + teacher.index.ToString())">
					@teacher.Value.Name
				</button>
			</li>
		}
	</ul>
</div>